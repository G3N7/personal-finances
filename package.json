{
  "name": "personal-finances",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run start --workspaces --if-present",
    "clean": "npm run clean:nm & npm run clean:dist",
    "clean:nm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "test": "npm run test --workspaces --if-present",
    "test:dev": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/G3N7/personal-finances.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/G3N7/personal-finances/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/G3N7/personal-finances#readme"
}